<% provide(:title, "基本情報編集") %>

<h1>基本情報の編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: update_basic_info_path(params: {id: @user.id})) do |f| %>
      <%= render "shared/errors_messages", object: @user %>

      <%= f.label t('.basic_work_time') %>
      <%= f.time_field :basic_work_time, class: 'form-control' %>

      <%= f.label t('.work_time') %>
      <%= f.time_field :work_time, class: 'form-control' %>

      <%= f.submit "更新する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>